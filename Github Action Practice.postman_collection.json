		{
			"name": "Auth",
			"item": [
				{
					"name": "Registration",
					"item": [
						{
							"name": "Register Merchant - Valid",
							"event": [
								{
									"listen": "prerequest",
									"script": {
										"exec": [
											"// Step 1: Define an array of names",
											"const names = [",
											"    \"Alice\", \"Bob\", \"Charlie\", \"David\", \"Eve\", \"Frank\", \"Grace\", \"Hannah\", \"Ivy\", \"Jack\",",
											"    \"Karen\", \"Liam\", \"Mia\", \"Noah\", \"Olivia\", \"Paul\", \"Quinn\", \"Rita\", \"Sam\", \"Tina\",",
											"    \"Uma\", \"Victor\", \"Wendy\", \"Xander\", \"Yara\", \"Zane\"",
											"];",
											"",
											"// Step 2: Generate a random index",
											"const randomIndex = Math.floor(Math.random() * names.length);",
											"",
											"// Step 3: Select the random name",
											"const randomName = names[randomIndex];",
											"",
											"// Step 4: Set the random name as an environment variable",
											"pm.environment.set(\"randomName\", randomName);",
											"function generateRandomString(length) {",
											"    const characters = 'abcdefghijklmnopqrstuvwxyz0123456789';",
											"    let result = '';",
											"    for (let i = 0; i < length; i++) {",
											"        const randomIndex = Math.floor(Math.random() * characters.length);",
											"        result += characters[randomIndex];",
											"    }",
											"    return result;",
											"}",
											"",
											"const randomLocalPart = generateRandomString(10); // Adjust the length as needed",
											"const randomEmail = `${randomLocalPart}@mailinator.com`;",
											"",
											"pm.environment.set(\"randomEmail\", randomEmail);",
											"",
											"function getRandomDigit() {",
											"    return Math.floor(Math.random() * 10); // Generates a random digit between 0 and 9",
											"}",
											"",
											"const prefix = \"081\"; // The fixed part of the phone number",
											"",
											"let randomDigits = \"\";",
											"for (let i = 0; i < 8; i++) { // Generate 8 random digits",
											"    randomDigits += getRandomDigit();",
											"}",
											"",
											"const randomPhoneNumber = prefix + randomDigits;",
											"",
											"pm.environment.set(\"randomPhoneNumber\", randomPhoneNumber);",
											"",
											"pm.environment.set(\"password\", \"Olubukola1@\");",
											"pm.environment.set(\"country\", \"Nigeria\");",
											"",
											""
										],
										"type": "text/javascript",
										"packages": {}
									}
								},
								{
									"listen": "test",
									"script": {
										"exec": [
											"pm.test(\"Status code is 201\", function () {",
											"    pm.response.to.have.status(201);",
											"});",
											"var response = JSON.parse(responseBody);",
											"tests[\"verify success message\"] = response.requestSuccessful == \"true\";",
											"tests[\"verify response message\"] = response.responseMessage == \"Registration Successful kindly check your email inbox/spam to validate your account\";",
											"tests[\"verify response code\"] = response.responseCode == \"00\";"
										],
										"type": "text/javascript",
										"packages": {}
									}
								}
							],
							"request": {
								"method": "POST",
								"header": [],
								"body": {
									"mode": "raw",
									"raw": " {\n       \"firstname\": \"{{randomName}}\",\n       \"lastname\":\"{{randomName}}\",\n       \"email\": \"{{randomEmail}}\",\n       \"country\": \"{{country}}\",\n       \"phone_number\": \"{{randomPhoneNumber}}\",\n       \"password\": \"{{password}}\"\n}  \n",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{base_url}}/auth/register",
									"host": [
										"{{base_url}}"
									],
									"path": [
										"auth",
										"register"
									]
								}
							},
							"response": []
						}
					]
				},
